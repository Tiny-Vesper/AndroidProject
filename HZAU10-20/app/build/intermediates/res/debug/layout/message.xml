<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical" >
	
    <EditText   
        android:id="@+id/account"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/zmr_user"
        android:hint="请输入学号" 
        android:ems="10" />

    <EditText
        android:id="@+id/password"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/zmr_password"
        android:hint="教务系统密码" 
        android:inputType="textPassword" />


                <ImageView
                    android:id="@+id/login_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yzm"
                    android:layout_alignBottom="@+id/user_code"
                    android:layout_toRightOf="@+id/user_code"
            android:layout_marginRight="20dp"
                    />
                


    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:text="登录" />

    <EditText
        android:id="@+id/user_code"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="17dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:drawableLeft="@drawable/zmr_register"
        android:hint="验证码输入"
        android:orientation="horizontal"
        android:singleLine="true"
        android:textSize="17sp" >

        <requestFocus />
    </EditText>

</RelativeLayout>

